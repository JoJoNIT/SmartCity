<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.main.HandleAlarmActivity"
    android:orientation="horizontal">
    <EditText
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/et_id"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:hint="请扫描设备上的二维码"
        android:clickable="false"
        android:focusable="false"
        android:enabled="false"
        android:textSize="15sp"
        android:textColor="#aaa"
        android:background="@drawable/bg_black"/>
    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/iv_picture"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/et_id"
        android:layout_marginLeft="30dp"
        android:src="@drawable/saoma"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:id="@+id/spinner"
        android:layout_below="@id/et_id"
        android:layout_marginTop="15dp"

        ></Spinner>
    <TextView
        android:id="@+id/tv_content"
        android:layout_below="@id/spinner"
        android:text="故障修理结果"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/et_detail"
        android:layout_below="@id/tv_content"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textColor="#000"
        android:background="@drawable/bg_black"
        android:gravity="left"
        android:maxLines="4"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"/>
    <Button
        android:id="@+id/btn_submit"
        android:text="提交"
        android:background="@drawable/selector_orange"
        android:layout_below="@id/et_detail"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp" />



</RelativeLayout>